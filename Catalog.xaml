<Page x:Class="ll.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ll"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Catalog">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox x:Name="Search" Margin="16" FontSize="16" TextChanged="Search_TextChanged"/>
        </StackPanel>
        <DataGrid x:Name="Data" Grid.Row="1" FontSize="16" Loaded="Data_Loaded" SizeChanged="Data_SizeChanged" SelectionChanged="Data_SelectionChanged"/>
    </Grid>
</Page>
